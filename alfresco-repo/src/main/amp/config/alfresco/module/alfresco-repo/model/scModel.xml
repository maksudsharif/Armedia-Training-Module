<?xml version="1.0" encoding="UTF-8"?>
<!-- Definition of new Model -->
<model name="sc:somecomodel" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	
	<!-- Imports are required to allow references to definitions in other models -->
	<imports>
		<!-- Import Alfresco Dictionary Definitions -->
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
		<!-- Import Alfresco Content Domain Model Definitions -->
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
		<import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>		
	</imports>

	<!-- Introduction of new namespaces defined by this model -->
	<namespaces>
		<namespace uri="http://www.someco.com/model/content/1.0" prefix="sc" />
	</namespaces>
	<constraints>
		<constraint name="sc:finalTypeList" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>Final</value>
					<value>Draft</value>
				</list>
			</parameter>
		</constraint>
    	<constraint name="sc:campaignList" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>Bottom Rim Coaters</value>
                    <value>Neckers</value>
                    <value>Trimmers</value>
                </list>
            </parameter>
        </constraint>
		<constraint name="sc:hrDocTypeList" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>General Administration</value>
					<value>Benefits</value>
					<value>Leave of Absence</value>
					<value>Performance Management</value>
					<value>Recruitment</value>
					<value>Personnel Record</value>
				</list>
			</parameter>
		</constraint>
		<constraint name="sc:finDocTypeList" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>Budget</value>
					<value>Expense Report</value>
					<value>Shareholder Report</value>
				</list>
			</parameter>
		</constraint>
		<constraint name="sc:mktgDocTypeList" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>Promotional</value>
					<value>Market Strategy</value>
					<value>Trimmers/Neckers/Machinery</value>
					<value>Client Relations</value>
				</list>
			</parameter>
		</constraint>
    </constraints>

	<types>
		<!-- Enterprise-wide generic document type -->
		<type name="sc:doc">
			<title>Someco Document</title>
			<parent>cm:content</parent>
			<associations>
				<association name="sc:relatedDocuments">
					<title>Related Documents</title>
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>sc:doc</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
			<mandatory-aspects>
				<aspect>cm:generalclassifiable</aspect>
			</mandatory-aspects>
		</type>

		<type name="sc:whitepaper">
			<title>Someco Whitepaper</title>
			<parent>sc:doc</parent>
		</type>

		<!-- Human Resources Document Base -->
		<type name="sc:humanResourcesDoc">
			<title>Someco HR Document</title>
			<parent>sc:doc</parent>
			<properties>
				<property name="sc:hrDocType">
					<type>d:text</type>
					<multiple>false</multiple>
					<constraints>
						<constraint ref="sc:hrDocTypeList" />
					</constraints>
				</property>
			</properties>
		</type>

		<!-- Marketing Document -->
        <type name="sc:marketingDoc">
                <title>Someco Marketing Document</title>
                <parent>sc:doc</parent>
                <properties>
                        <property name="sc:campaign">
                                <type>d:text</type>
                                <multiple>true</multiple>
                                <constraints>
                                        <constraint ref="sc:campaignList" />
                                </constraints>
                        </property>
						<property name="sc:mktgDocType">
							<type>d:text</type>
							<multiple>false</multiple>
							<constraints>
								<constraint ref="sc:mktgDocTypeList" />
							</constraints>
						</property>
                </properties>
        </type>

		<!-- Financial Document -->
		<type name="sc:financialDoc">
			<title>Someco Financial Document</title>
			<parent>sc:doc</parent>
			<properties>
				<property name="sc:finDocType">
					<type>d:text</type>
					<multiple>false</multiple>
					<constraints>
						<constraint ref="sc:finDocTypeList" />
					</constraints>
				</property>
			</properties>
		</type>
		
		<!-- Technical Report -->
		<type name="sc:technicalReport">
			<title>Belvac Technical Report</title>
			<parent>sc:doc</parent>
			<properties>
				<property name="sc:final">
					<type>d:text</type>
					<multiple>false</multiple>
					<constraints>
						<constraint ref="sc:finalTypeList"/>
					</constraints>
				</property>
			</properties>
			<mandatory-aspects>
				<aspect>sc:identifiable</aspect>
				<aspect>sc:techReviewable</aspect>
			</mandatory-aspects>
		</type>
		
		<type name="sc:client">
			<title>Someco Client</title>
			<parent>sys:base</parent>
			<properties>
				<property name="sc:clientName">
					<type>d:text</type>
				</property>
				<property name="sc:clientId">
					<type>d:text</type>
				</property>
			</properties>
		</type>
	</types>


	<!-- Aspects -->
	<aspects>
		<aspect name="sc:webable">
			<title>Someco Webable</title>
			<properties>
				<property name="sc:published">
					<type>d:date</type>
				</property>
				<property name="sc:isActive">
					<type>d:boolean</type>
					<default>false</default>
				</property>
			</properties>
		</aspect>
		
		<aspect name="sc:productRelated">
			<title>Someco Product Metadata</title>
			<properties>
				<property name="sc:product">
					<type>d:text</type>					
					<mandatory>true</mandatory>
					<multiple>true</multiple>					
				</property>				
				<property name="sc:version">
					<type>d:text</type>
					<mandatory>true</mandatory>
					<multiple>true</multiple>
				</property>
			</properties>
		</aspect>
		
	<!-- BELVAC -->
		<aspect name="sc:techReviewable">
			<title>Someco Tech Reviewable</title>
			<properties>
				<property name="sc:reviewFlag">
					<type>d:boolean</type>
					<mandatory>true</mandatory>
					<multiple>false</multiple>
				</property>
			</properties>
		</aspect>
		<aspect name="sc:identifiable">
			<title>Belvac Document ID</title>
			<properties>
				<property name="sc:documentId">
					<type>d:text</type>
					<mandatory>true</mandatory>
					<multiple>false</multiple>
				</property>
			</properties>
		</aspect>	
	
		<aspect name="sc:clientRelated">
			<title>SomeCo Client Related</title>
			<associations>
				<association name="sc:relatedClients">
					<title>Related Clients</title>
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>sc:client</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
		</aspect>	
	</aspects>
</model>